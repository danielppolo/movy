<div class="navbar-wagon">
	<!-- Logo -->
	<%= link_to root_path, class: "navbar-wagon-brand" do %>
	<%= image_tag "logo.png", height: 50 %>
	<% end %>

	<% if user_signed_in? %>


    <%= render "shared/search", id: "searchbar-in-navbar"%>



  <div class="navbar-wagon-right hidden-xs hidden-sm">


		<%= link_to "Rent bike", bikes_path, class: "navbar-wagon-item navbar-wagon-link" %>

		<%= link_to "Rent out your bike", new_bike_path, class: "navbar-wagon-item navbar-wagon-link" %>


		<!-- Avatar with dropdown menu -->
		<div class="navbar-wagon-item">
			<div class="dropdown">
				<%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
				<ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
									<li>
						<%= link_to "Dashboard", profile_path(current_user.profile)  %>
				</li>
					<li>
						<% if current_user.profile %>
						<%= link_to "Edit Profile", edit_profile_path(current_user.profile)  %>
						<% else %>
						<%= link_to "Create Profile", new_profile_path  %>
						<% end %>
					</li>
					<li>
						<%= link_to destroy_user_session_path, method: :delete do %>
						<i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- Dropdown list appearing on mobile only -->
	<div class="navbar-wagon-item hidden-md hidden-lg">
		<div class="dropdown">
			<i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
			<ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
				<li><%= link_to "Rent bike", bikes_path %></li>

		<li><%= link_to "Rent out your bike", new_bike_path %></li>

				<li>
						<%= link_to "Dashboard", profile_path(current_user)  %>

				</li>
				<li>
					<% if current_user.profile %>
					<%= link_to "Edit Profile", edit_profile_path(current_user.profile)  %>
					<% else %>
					<%= link_to "Create Profile", new_profile_path  %>
					<% end %>
				</li>
				<li>
					<%= link_to destroy_user_session_path, method: :delete do %>
					<i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
					<% end %>
				</li>
			</ul>
		</div>
	</div>
</div>
<div class="navbar-mob">
	<div class="container">
		<div class="row ">
			<div class="col-sm-12 model-location-input">
				<form class="form-inline" method="get" action="/bikes">

					<input class="form-control mr-sm-2" type="search" placeholder="Model or Location" aria-label="Search" name="q"></div>
				</form>
				<div class="col-sm-12">
					<button class="btn btn-primary btn-block" type="submit">Search a Bike</button>
				</div>
			</form>
		</div></div>
	</div></div>
	<% else %>
	<!-- Login link (when logged out) -->
	<%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
	<% end %>
</div>
</div>
</nav>
