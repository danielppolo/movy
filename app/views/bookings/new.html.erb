<div class="booking_wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="booking-headers">
          <h2><%= @bike.make %></h2>
          <h3>$<%= @bike.rate %>/day</h3>
        </div>
        <div>
          <%= simple_form_for [@bike, @booking] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.submit%>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">
        <div
        id="map"
        style="width: 100%;
        height: 500px;
        border-radius: 5px;"
        data-markers="<%= @marker.to_json %>"
        ></div>
      </div>
    </div>
  </div>
</div>
