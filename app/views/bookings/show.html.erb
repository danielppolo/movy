  <%= render "layouts/navbar" %>
<br>
<h1><%= @booking.bike.model %></h1>
<h2><%= @booking.user.email %></h2>
<h3><%= @booking.start_date %></h3>
<h3><%= @booking.end_date %></h3>
<h3><%= @booking.status %></h3>
<% if policy(@booking).approve? %>
<%= link_to "Approve booking", approve_booking_path(@booking) %>
<% end %>
<% if policy(@booking).decline? %>
<%= link_to "Decline booking", decline_booking_path(@booking) %>
<% end %>
<br>
<% if policy(@booking).edit? %>
<%= link_to "Edit booking", edit_booking_path(@booking) %>
<% end %>
<% if policy(@booking).destroy? %>
<%= link_to "Delete booking", @booking, method: :delete %>
<% end %>
