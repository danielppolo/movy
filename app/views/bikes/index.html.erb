  <%= render "layouts/navbar" %>

  <div class="container">
   <div class="row">
    <div class="col-lg-12">
    </div>
  </div>
  <div class="row">
    <% @bikes.each do |bike| %>
    <div class="col-xs-12 col-sm-4">
     <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= bike.photo %>);">
      <div class="card-category"><%= bike.location %></div>
      <div class="card-description">
       <h2><%= bike.make %> <%= bike.model %></h2>
       <p><span><%= bike.rate %> <%= "$/day" %></span></p>
     </div>
     <!--   <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
     <% if policy(bike).show? %>
     <%= link_to ' ', new_bike_booking_path(bike), class: "card-link" %>
     <% end %>
<!--  <a class="card-link" href="#" ></a>
--></div>
</div>
<% end %>
</div>
